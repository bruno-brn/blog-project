<%- include('./partials/header.ejs')%>
<%- include('./partials/homenavbar.ejs')%>

<body>
    <div class="container">
        <div class="jumbotron form-control bg-light ">
            <h1 class="display-4">Bem vindo!</h1>
            <p class="lead">Este é um simples blog de artigos</p>
            <hr class="my-4">
            <p>Aqui você pode ler e escrever artigos</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
        </div>
        <hr>
        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title  %></h2>
                </div>
                <div class="card-body">
                    <a  href="/<%= article.slug %>" class="btn btn-primary" >Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %>
        <div class="row">
            <div class="col col-12">
                <a style="float: right;" href="/articles/page/2"> Next >>></a>
            </div>
            <hr>
        </div>
        <hr>
    </div>
</body>

